<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/co_border_white"
    android:layout_margin="10dp"
    android:orientation="vertical">
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/levelimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/lishijilu"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/levelimg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="历史记录"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewnums"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/levelimg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="目前历史观看过3部"
            android:textColor="@color/fontgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/toHistoryList"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="false"
            android:layout_gravity="right"
            android:layout_marginEnd="-20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/jiantou" />

        <HorizontalScrollView
            android:id="@+id/hsw"
            android:layout_width="fill_parent"
            android:layout_height="102dp"
            android:layout_below="@id/viewnums"
            android:layout_marginTop="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <GridView
                    android:id="@+id/historyGridView"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:columnWidth="100dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="#ededed">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/huancunimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/wodehuancun"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/huancunimg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="我的缓存"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/huancunNums"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/huancunimg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="目前本地大片有0部"
            android:textColor="@color/fontgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/toStorageList"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="false"
            android:layout_gravity="right"
            android:layout_marginEnd="-20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/jiantou" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/likes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/wodexihuan"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/likes"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="我的喜欢"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/likenums"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/likes"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="目前已有喜欢3部"
            android:textColor="@color/fontgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/toLikeList"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="false"
            android:layout_gravity="right"
            android:layout_marginEnd="-20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/jiantou" />


    </RelativeLayout>
</LinearLayout>
